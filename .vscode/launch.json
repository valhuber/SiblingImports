    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run",
            "type": "python",
            "request": "launch",
            "program": "run.py",
            "redirectOutput": true,
            "justMyCode": true,            
            "console": "integratedTerminal"
        },
        {
            "name": "RunSiblingA",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/SiblingA",
            "program": "A.py",
            "redirectOutput": true,
            "justMyCode": true,            
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "redirectOutput": true,
            "justMyCode": false,            
            "module": "enter-your-module-name"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "redirectOutput": true,
            "justMyCode": false,            
            "console": "integratedTerminal"
        }
    ]
}